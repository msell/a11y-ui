{
    "compilerOptions": {
      "outDir": "build",
      "target": "es5",
      "module": "esnext",
      "baseUrl": "./",
      "paths": {
        "a11y-ui": ["src/"]
      },
      "pretty": true,
      "strict": true,
      "removeComments": true,
      "lib": ["esnext", "dom"],
      "sourceMap": true,
      "allowJs": false,
      "jsx": "react",
      "declaration": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "stripInternal": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src", "types"],
    "exclude": ["node_modules", "build", "dist", "**/*.stories.tsx"]
  }